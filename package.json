{
  "name": "root",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "postinstall": "ts-patch install",
    "clean": "node scripts/clean.mjs",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",

    "build": "pnpm --recursive --parallel --filter \"./packages/**/*\" run build",
    "check": "tsc -b tsconfig.json",
    "check-recursive": "pnpm --recursive --filter \"./packages/**/*\" exec tsc -b tsconfig.json",

    "db:push": "pnpm --filter artemis run db:push",
    "db:generate": "pnpm --filter artemis run db:generate",
    "db:migrate": "pnpm --filter artemis run db:migrate",
    "db:check": "pnpm --filter artemis run db:check",
    "db:studio": "pnpm --filter artemis run db:studio"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": "22.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@effect/language-service": "^0.44.0",
    "@types/node": "^24.7.1",
    "ts-patch": "^3.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
